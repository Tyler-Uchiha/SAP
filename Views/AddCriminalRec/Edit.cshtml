@model AddCriminalRec

<form method="post">
    
    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary">Edit Criminal Record</h2>
        </div>

        @if (TempData["AlertMessage_Edit_Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["AlertMessage_Edit_Error"]
                <button type="button" class="close mx-5" data-dismiss="alert">
                    <span>
                        &times;
                    </span>
                </button>
            </div>
        }

        <div class="mb-3" row>
            <div class="container">
                <select asp-for="OffenceCommitted" type="text" class="form-control" asp-items="@ViewBag.OffencesList" class=" my-3 border p-xl dropdown-toggle">
                    <option>Select Offence Commitetd</option>
                </select>
            </div>
        </div>
       
        <div class="mb-3" row>
            <div class="container">
                <label asp-for="Sentence"></label>
                <input asp-for="Sentence" type ="number" class="form-control"> 
                <span asp-validation-for="Sentence" class="text-danger"></span> 
            </div>
        </div>

        <div class="mb-3" row>
            <div class="container">
                <label asp-for="IssuedAt"></label>
                <input asp-for="IssuedAt" type="text" class="form-control">
                <span asp-validation-for="IssuedAt" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3" row>
            <div class="container">
                <label asp-for="IssuedBy"></label>
                <input asp-for="IssuedBy" type="text" class="form-control">
                <span asp-validation-for="IssuedBy" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3" row>
            <div class="container">
                <label asp-for="IssueDate"></label>
                <input asp-items="@ViewBag.CurrIssueDate" asp-for="IssueDate" type="date" class="form-control">
                <span asp-validation-for="IssueDate" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3" row>
            <div class="container">
                <label asp-for="Case_Status">Case Status</label>
                <select asp-for="Case_Status" type="text" class="form-control" asp-items="@ViewBag.Case_Status" class=" my-3 border p-xl dropdown-toggle">
                    <option>Select Case Status</option>
                </select>
                <span asp-validation-for="Case_Status" class="text-danger"></span>
            </div>
        </div>

        <div class="row">

            <div class="col-6 col-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>

            <div class="col-6 col-3">
                <a asp-controller="AddCriminalRec" asp-action="AllCriminalRecords" class="btn btn-outline-secondary border form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>

