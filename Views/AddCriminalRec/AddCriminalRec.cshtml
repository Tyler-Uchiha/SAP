<body>

    <h2 class="mt-5">Add criminal record</h2>
    <hr/>
    <div class="container" style="margin-left : 15%; margin-top : 5%">
        <form method="post" asp-action="AddCriminalRec">
            <div class="border p-3 mt-4 w-75 border-1 border-dark">

                <div class="row">
                        <div class="col">
                            <div class="mb-3" row>
                                <div class="container">
                                    <select asp-for="OffenceCommitted" type="text" asp-items="@ViewBag.OffenceList" class=" form-control w-50 my-3 border p-xl dropdown-toggle border-1 border-dark">
                                    <option>Select Offence Commitetd</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                 </div>

                 <div class="row">
                    <div class="col">
                        <div class="mb-3 col-6 col-3" row>
                            <label asp-for="Sentence" class="my-3"></label>
                            <input asp-for="Sentence" type="number" class="form-control w-100 border-1 border-dark">
                            <span asp-validation-for="Sentence" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col">
                        <div class="mb-3 col-6 col-3" row>
                            <label asp-for="IssuedAt" class="my-3"></label>
                            <select asp-for="IssuedAt" type="text" asp-items="@ViewBag.Stations" class=" form-control w-100  border dropdown-toggle border-1 border-dark">
                                <option>Select Station</option>
                            </select>
                        </div>
                    </div>  
                </div>

                <div class="row">
                    <div class="col">
                        <div class="mb-3 col-6 col-3" row>
                            <label asp-for="IssuedBy" class="my-3"></label>
                            <input asp-for="IssuedBy" type="text" class="form-control w-100 border-1 border-dark">
                            <span asp-validation-for="IssuedBy" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col">
                        <div class="mb-3 col-6 col-3" row>
                            <label asp-for="IssueDate" class="my-3"></label>
                            <input asp-for="IssueDate" type="date" class="form-control w-100 border-1 border-dark">
                            <span asp-validation-for="IssueDate" class="text-danger"></span>
                        </div>
                    </div>  
                </div>

                <div class="row">

                    <div class="col-6 col-3">
                        <button type="submit" class="btn btn-primary form-control">Submit</button>
                    </div>

                    <div class="col-6 col-3">
                        <a asp-controller="AddCriminalRec" asp-action="AllCriminalRecords" class="btn btn-outline-secondary border form-control">Back To List</a>
                    </div>
                </div>
                
                @* <div class="row mt-4" style="margin-left : 35%">
